{% extends 'base.jinja2' %}

{% block subtitle %}Bid on {{ team }}{% endblock subtitle %}

{% block content %}
<p>Current High Bid for {{ team }} is {{ high_bid }} by {{ leader }}.</p>
{% if error %}<span class="error">{{ error }}<br><br>{% endif %}

<div class="columns">
    <div class="column">
        <form id="bid-form">
            <div class="field">
                <label for="name-input" class="label">Your Name: </label>
                <div class="control">
                    <input id="name-input" name="name" class="input" type="text" placeholder="Enter your name here">
                </div>
            </div>

            <div class="field">
                <label for="amount-input" class="label">Your Bid: </label>
                <div class="control">
                    <input id="amount-input" name="bid" type="number" placeholder="Enter your bid here">
                </div>
            </div>

            <div class="field">
                <input type="submit" value="Place Bid">
            </div>
        </form>
    </div>

    <div class="column">
        <div id="bid-list"></div>
    </div>
</div>
{% endblock content %}
