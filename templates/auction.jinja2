{% extends 'base.jinja2' %}

{% block subtitle %}Bid on {{ team }}{% endblock subtitle %}

{% block content %}
<p>Current High Bid for {{ team }} is {{ high_bid }} by {{ leader }}.</p>
{% if error %}<span class="error">{{ error }}<br><br>{% endif %}
<form method="POST">
    <label for="name-input">Your Name: </label><input id="name-input" type="text" name="name"><br>
    <label for="amount-input">Your Bid:</label><input id="amount-input" type="number" name="bid"><br><br>
    <input type="submit" value="Submit this Bid">
</form>
{% endblock content %}
